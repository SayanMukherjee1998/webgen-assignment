<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./layout/head.ejs')%>
  </head>
  <body>
    <%-include('./layout/nav.ejs')%>

    <form class="container-fluid" action="/updateProduct" method="post">
      <div class="form-group">
        <label for="formGroupExampleInput">Product Name</label>
        <input type="hidden" name="p_id" value="<%= productData._id%>" />

        <input
          name="name"
          type="text"
          class="form-control"
          id="formGroupExampleInput"
          placeholder="Enter product name here"
          value="<%= productData.name%>"
        />
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput2">Product Description</label>
        <input
          name="description"
          type="text"
          class="form-control"
          id="formGroupExampleInput2"
          placeholder="Enter product description"
          value="<%= productData.description%>"
        />
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput2">Product Price</label>
        <input
          name="price"
          type="text"
          class="form-control"
          id="formGroupExampleInput2"
          placeholder="Enter product price"
          value="<%= productData.price%>"
        />
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput2">User Name</label>
        <input
          name="addByUser"
          type="text"
          class="form-control"
          id="formGroupExampleInput2"
          placeholder="Enter product price"
        />
      </div>
      <button type="submit" class="btn btn-success">Update Product</button>
    </form>
  </body>
</html>
